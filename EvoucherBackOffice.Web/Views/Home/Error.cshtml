
@{
    ViewBag.Title = "Error";
}

<section class="error-page">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="error-page__logo-wrapper pull-right">
                    @Html.Partial("_Logo")
                </div>
            </div>
            <div class="col-md-6 offset-md-3">
                <div class="error-page__panel text-center">
                    <div class="error-page__panel-header">
                        <div class="row">
                            <div class="col-md-7">
                                <h4 class="error-page__panel-header-title">Error Message</h4>
                            </div>
                            <div class="col-md-5">
                                <div class="error-page__panel-nav-body dropdown pull-right">
                                    <a class="error-page__panel-nav-icon-link dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <span class="error-page__panel-nav-icon glyphicon glyphicon-option-vertical"></span>
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="height:60px; width:290px; margin: 10px 30px 0px 0px;border-radius:0px;">
                                        <div class="error-page__panel-nav-item">
                                            <a class="error-page__panel-nav-item-link dropdown-item" href="@Url.Action("Index", "Home", null)">
                                                <span class="error-page__panel-nav-item-title-1">Back to Action Dashboard</span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="error-page__panel-body">
                        <p class="error-page__panel-message">An error occurred while processing your request. Please try again.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

