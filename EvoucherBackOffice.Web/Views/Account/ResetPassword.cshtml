@model EvoucherBackOffice.Web.ViewModel.Account.ResetPasswordViewModel
@{
    ViewBag.Title = "reset-password";
}

<section class="reset-password">
    <div class="container">
        <div class="row">
            <div class="col-md-4 offset-md-5">
                @Html.Partial("_Logo")
            </div>
            <div class="col-md-6 offset-md-3">
                <div class="reset-password__panel text-center">
                    <div class="reset-password__panel-header">
                        <h6 class="reset-password__panel-header-title">Reset Password</h6>
                    </div>
                    <div class="reset-password__panel-form">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <div class="col-md-12">
                                    <div class="reset-password__panel-form-item-wrapper">
                                        <div class="reset-password__panel-form-icon-wrapper">
                                            <span class="fa fa-envelope fa-inverse fa-2x"></span>
                                        </div>
                                        <div class="reset-password__panel-form-input-wrapper">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "reset-password__panel-form-input form-control", placeholder = "E-mail", type = "text" })
                                        </div>
                                    </div>
                                </div>
                                <div class="reset-password__panel-form-item-error col-md-12">
                                    @Html.ValidationMessageFor(m => m.Email)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <div class="reset-password__panel-form-item-wrapper">
                                        <div class="reset-password__panel-form-icon-wrapper">
                                            <span class="fa fa-lock fa-inverse fa-2x"></span>
                                        </div>
                                        <div class="reset-password__panel-form-input-wrapper">
                                            @Html.TextBoxFor(m => m.Password, new { @class = "reset-password__panel-form-input form-control", placeholder = "Password", type = "text" })
                                        </div>
                                    </div>
                                </div>
                                <div class="reset-password__panel-form-item-error col-md-12">
                                    @Html.ValidationMessageFor(m => m.Password)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <div class="reset-password__panel-form-item-wrapper">
                                        <div class="reset-password__panel-form-icon-wrapper">
                                            <span class="fa fa-lock fa-inverse fa-2x"></span>
                                        </div>
                                        <div class="reset-password__panel-form-input-wrapper">
                                            @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "reset-password__panel-form-input form-control", placeholder = "Confirm Password", type = "text" })
                                        </div>
                                    </div>
                                </div>
                                <div class="reset-password__panel-form-item-error col-md-12">
                                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                                </div>
                            </div>
                            <div class="text-center">
                                <button class="reset-password__panel-form-button" type="submit">
                                    <span class="fa fa-arrow-right fa-3x fa-inverse"></span>
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>