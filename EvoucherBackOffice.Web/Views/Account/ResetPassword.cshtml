@model EvoucherBackOffice.Web.ViewModel.Account.ResetPasswordViewModel
@{
    ViewBag.Title = "reset-password";
}

<section class="reset-password">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="reset-password__logo-wrapper pull-right">
                    @Html.Partial("_Logo")
                </div>
            </div>
            <div class="col-md-6 offset-md-3">
                <div class="reset-password__panel text-center">
                    <div class="reset-password__panel-header">
                        <div class="row">
                            <div class="col-md-7">
                                <h4 class="reset-password__panel-header-title">Reset Password</h4>
                            </div>
                            <div class="col-md-5">
                                <div class="reset-password__panel-nav-body dropdown pull-right">
                                    <a class="reset-password__panel-nav-icon-link dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <span class="reset-password__panel-nav-icon glyphicon glyphicon-option-vertical"></span>
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="height:60px; width:290px; margin: 10px 30px 0px 0px;border-radius:0px;">
                                        <div class="reset-password__panel-nav-item">
                                            <a class="reset-password__panel-nav-item-link dropdown-item" href="#">
                                                <span class="reset-password__panel-nav-item-title-1">Back to Login screen</span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="reset-password__panel-form">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <div class="col-md-12">
                                    <div class="reset-password__panel-form-item-wrapper">
                                        <div class="reset-password__panel-form-icon-wrapper">
                                            <span class="fa fa-envelope fa-inverse fa-2x"></span>
                                        </div>
                                        <div class="reset-password__panel-form-input-wrapper">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "reset-password__panel-form-input form-control", placeholder = "E-mail", type = "text" })
                                        </div>
                                    </div>
                                </div>
                                <div class="reset-password__panel-form-item-error col-md-12">
                                    @Html.ValidationMessageFor(m => m.Email)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <div class="reset-password__panel-form-item-wrapper">
                                        <div class="reset-password__panel-form-icon-wrapper">
                                            <span class="fa fa-lock fa-inverse fa-2x"></span>
                                        </div>
                                        <div class="reset-password__panel-form-input-wrapper">
                                            @Html.TextBoxFor(m => m.Password, new { @class = "reset-password__panel-form-input form-control", placeholder = "Password", type = "text" })
                                        </div>
                                    </div>
                                </div>
                                <div class="reset-password__panel-form-item-error col-md-12">
                                    @Html.ValidationMessageFor(m => m.Password)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <div class="reset-password__panel-form-item-wrapper">
                                        <div class="reset-password__panel-form-icon-wrapper">
                                            <span class="fa fa-lock fa-inverse fa-2x"></span>
                                        </div>
                                        <div class="reset-password__panel-form-input-wrapper">
                                            @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "reset-password__panel-form-input form-control", placeholder = "Confirm Password", type = "text" })
                                        </div>
                                    </div>
                                </div>
                                <div class="reset-password__panel-form-item-error col-md-12">
                                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                                </div>
                            </div>
                            <div class="text-center">
                                <button class="reset-password__panel-form-button" type="submit">
                                    <span class="fa fa-arrow-right fa-3x fa-inverse"></span>
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>