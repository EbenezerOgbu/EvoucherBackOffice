@{
    ViewBag.Title = "Forgot Password Confirmation";
}

<section class="forgot-password-confirmation">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="forgot-password-confirmation__logo-wrapper pull-right">
                    @Html.Partial("_Logo")
                </div>
            </div>
            <div class="col-md-6 offset-md-3">
                <div class="forgot-password-confirmation__panel text-center">
                    <div class="forgot-password-confirmation__panel-header">
                        <div class="row">
                            <div class="col-md-7">
                                <h4 class="forgot-password-confirmation__panel-header-title">Notification</h4>
                            </div>
                            <div class="col-md-5">
                                <div class="forgot-password-confirmation__panel-nav-body dropdown pull-right">
                                    <a class="forgot-password-confirmation__panel-nav-icon-link dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <span class="forgot-password-confirmation__panel-nav-icon glyphicon glyphicon-option-vertical"></span>
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="height:60px; width:290px; margin: 10px 30px 0px 0px;border-radius:0px;">
                                        <div class="forgot-password-confirmation__panel-nav-item">
                                            <a class="forgot-password-confirmation__panel-nav-item-link dropdown-item" href="#">
                                                <span class="forgot-password-confirmation__panel-nav-item-title-1">Log Out</span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="forgot-password-confirmation__panel-body">
                        <p class="forgot-password-confirmation__panel-message">A message has been sent to your email address.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

